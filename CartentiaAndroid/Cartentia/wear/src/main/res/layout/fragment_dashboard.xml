<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center"
              android:paddingLeft="10dp"
              android:background="@drawable/bg_main">

    <com.extentia.cartentia.widgets.CartentiaTextView
            android:id="@+id/cartTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/DashboardTextStyle"
            android:text="@string/title_cart"
            android:background="@drawable/bg_ripple"
            android:drawableLeft="@drawable/icn_dashboard_cart"
            />

    <com.extentia.cartentia.widgets.CartentiaTextView
            android:id="@+id/orderHistoryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_order_history"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_ripple"
            style="@style/DashboardTextStyle"
            android:drawableLeft="@drawable/icn_dashboard_history"/>

    <com.extentia.cartentia.widgets.CartentiaTextView
            android:id="@+id/scanProductTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_scan_product"
            android:background="@drawable/bg_ripple"
            android:layout_marginTop="10dp"
            style="@style/DashboardTextStyle"
            android:drawableLeft="@drawable/icn_dashboard_scan"/>

</LinearLayout>
